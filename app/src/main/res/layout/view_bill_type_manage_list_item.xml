<?xml version="1.0" encoding="utf-8"?>
<com.attendance.bk.view.swipeRevealLayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/vertical_item_height"
    app:dragEdge="left"
    app:mode="normal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/color_delete_text_bg"
            android:gravity="center"
            android:text="删除"
            android:textColor="@android:color/white" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingRight="@dimen/left_right_margin"
        android:paddingLeft="@dimen/left_right_margin">


        <ImageView
            android:id="@+id/bt_icon"
            android:layout_width="40dp"
            android:layout_centerVertical="true"
            android:layout_height="40dp"
            android:padding="7.5dp"
            tools:srcCompat="@drawable/ic_category_book_click" />

        <TextView
            android:id="@+id/bt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/bt_icon"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/sub_title_text_size"
            tools:text="流水" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_arrow_right" />

    </RelativeLayout>

</com.attendance.bk.view.swipeRevealLayout.SwipeRevealLayout>

    <!--</com.boss.bk.view.SwipeLayoutParent>-->